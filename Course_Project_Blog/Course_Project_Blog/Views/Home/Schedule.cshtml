@{
    ViewBag.Title = "Schedule";
}

<h1>Schedule</h1>

<ul>
    @model List<string>
    @for(int index = 0; index < Model.Count; index++)
    {
    <li>
        @Model[index]: @Model[index - 1] <br/>
        
        @if (Roles.IsUserInRole(User.Identity.Name, "Administrators"))
        {
            @Html.ActionLink("[Delete]", "RemoveItem", new { index })
        }
    </li>
    }
</ul>

<h3> 2016/2017 Fixtures:</h3>
@if ((Roles.IsUserInRole(User.Identity.Name, "Administrators")) || (Roles.IsUserInRole(User.Identity.Name, "Moderators")))
{
    <form action="/Home/AddItem" method="post">
        <div>Game:</div>
        <input type="text" autofocus name="newItem"/>
        <div>Date and Time:</div>
        <input type="datetime" autofocus name="newItem" /><br/>
        <input type="submit"  value="Add game"/>
    </form>
    
}

